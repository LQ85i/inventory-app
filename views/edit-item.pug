edit-item.text-white.w-full.p-4
  button.h-10.ml-3.border-2.rounded(class="border-[#ffffff4b] hover:cursor-pointer hover:ring" onclick=`window.location.href="/categories"`) 
    span Back
  form(action="/items/update" method='POST') 
    h4.mt-6.text-xl.border-b-2.border-gray-500.pb-2  Add item
    label.mt-4.flex.h-8.items-center(for="name") 
      span.w-32 Item name: 
      input.border-2.p-1(id="name" type="text" name="itemName" class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" required)
    br
    label.flex.h-8.items-center(for="description") 
      span.w-32 Description: 
      input.border-2.p-1(id="description" type="text" name="itemDescription" class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" required)
    br
    label.flex.h-8.items-center(for="price") 
      span.w-32 Price: 
      input.border-2.p-1(id="price" type="number" name="itemPrice" min="0" step="0.01" class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" required)
    br
    label.flex.h-8.items-center(for="stock") 
      span.w-32 Stock: 
      input.border-2.p-1(id="stock" type="number" name="itemStock" min="0" class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" required)
    br
    label.flex.h-8.items-center(for="url") 
      span.w-32 URL address: 
      input.border-2.p-1(id="url" type="text" name="itemURL" class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" required)
    br
    label.flex.h-8.items-center(for="category") 
      span.w-32 Category: 
      select.border-2.p-1(id="category" name="itemCategory" class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" required)
        each category, index in categories
          option(value=category._id) #{category.name}
    br
    div.border-t-2.border-gray-500.pt-4
    label.flex.h-8.w-24.items-center.justify-center.rounded.py-1.px-4.border-2(class="border-[#50aaff81] bg-[#152e4483] hover:border-[#50ABFF] focus:border-[#50ABFF]" for="submit")
      input.text-white(id="submit" type="submit" value="Submit")